{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2019",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "esnext"
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "include": [
        "src/**/*.json",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "hardhat",
        "sql"
    ]
}